@model CreateNewsViewModel
@{
    ViewData["Title"] = "Создание новости";
}

<div class="card col-md-12">
    <form asp-action="CreateNews" asp-controller="Home" method="post">
        <div asp-validation-summary="All" style="font-size: 23px"></div>
        <div class="mb-3">
            <label class="form-label">Название</label>
            <input type="text" asp-for="title" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label">Описание</label>
            <textarea cols="1" rows="3" asp-for="description" class="form-control"></textarea>
        </div>
        <div>
            <button class="btn btn-primary float-right" type="submit">Отправить</button>
        </div>
    </form>
</div>